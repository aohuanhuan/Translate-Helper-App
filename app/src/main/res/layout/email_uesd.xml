<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FetchVerificationActivity">

    <include layout="@layout/common_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:text="该邮箱账号已经被以下翻译帮账号绑定"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:text="您可以选择直接登录该账号或者使用其他邮箱注册新账号"
        android:textSize="10sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/email_used_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dog"/>

        <TextView
            android:id="@+id/emailUsedUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是预置的账号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/emailUsedLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:background="@drawable/login_selector"
            android:text="直接登录"
            android:textColor="@color/colorTitle"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="或者"/>

        <Button
            android:id="@+id/registerByEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/email_used_selector"
            android:text="使用新邮箱注册"
            android:textColor="#000000"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>